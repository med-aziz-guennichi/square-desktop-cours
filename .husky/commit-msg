YELLOW="\e[93m"
GREEN="\e[32m"
RED="\e[31m"
ENDCOLOR="\e[0m"

printMessage() {
   printf "${YELLOW}StudiffyCours : $1${ENDCOLOR}\n"
}

printSuccess() {
   printf "${GREEN}StudiffyCours : $1${ENDCOLOR}\n"
}

printError() {
   printf "${RED}StudiffyCours : $1${ENDCOLOR}\n"
}

printMessage "Running the StudiffyCours commit-msg hook."

# Check for duplicate Signed-off-by lines
test "" = "$(grep '^Signed-off-by: ' "$1" | sort | uniq -c | sed -e '/^[ 	]*1[ 	]/d')" || {
   echo >&2 Duplicate Signed-off-by lines.
   exit 1
}

# Run commitlint instead of gitlint
npx commitlint --edit "$1"

if [ $? -ne 0 ]
then
    printError "Please fix your commit message to match StudiffyCours coding standards"
    printError "Call med aziz guennichi on Slack to get help"
    exit 1
fi

printSuccess "Commit message passed StudiffyCours standards."
